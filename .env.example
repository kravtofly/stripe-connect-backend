# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Webflow CMS Configuration
WEBFLOW_TOKEN=your_webflow_api_token
WEBFLOW_COLLECTION_ID=your_flight_labs_collection_id
COACH_COLLECTION_ID=your_coach_collection_id
WEBFLOW_CMS_LOCALE_ID=optional_locale_id_for_multi_language

# Memberstack Configuration
MEMBERSTACK_SECRET_KEY=your_memberstack_secret_key
MEMBERSTACK_APP_ID=your_memberstack_app_id

# URLs
PUBLIC_SITE_URL=https://www.kravtofly.com
WEBFLOW_DOMAIN=https://www.kravtofly.com

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://www.kravtofly.com,https://staging.kravtofly.com

# Platform Fees
# Use PLATFORM_FEE_PCT for percentage-based fee (0.18 = 18%)
PLATFORM_FEE_PCT=0.18
# OR use PLATFORM_FEE_CENTS for fixed fee in cents
# PLATFORM_FEE_CENTS=500

# Checkout URLs (default redirects)
CHECKOUT_SUCCESS_URL=/flight-lab-success
CHECKOUT_CANCEL_URL=/flight-lab-cancelled

# Make.com Webhook Integration
MAKE_WEBHOOK_URL=https://hook.make.com/your_webhook_url
MAKE_FORWARDING_SECRET=your_make_forwarding_secret

# ICS Calendar Configuration
ICS_REQUIRE_TOKEN=false
ICS_HMAC_SECRET=your_hmac_secret_for_ics_tokens

# Authentication (OPTIONAL - highly recommended for production)
# Generate a secure key with: node -e "console.log(require('crypto').randomBytes(32).toString('base64url'))"
API_SECRET_KEY=

# Debug Flags (set to 'true' only in development)
DEBUG_SUCCESS_URLS=false
DEBUG_STRIPE_ERRORS=false

# Environment
NODE_ENV=production
